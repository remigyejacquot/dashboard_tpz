{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <section id="formulaire-reset">
        <h1>Reset your password</h1>

        {{ form_start(resetForm) }}
        {{ form_row(resetForm.plainPassword) }}
        <button class="btn btn-primary">Reset password</button>
        {{ form_end(resetForm) }}
    </section>
    <style>
        body{
            padding: 0;
            margin: 0;
            width: 100vw;
            height: 100vh;
        }
        #formulaire-reset {
            overflow: hidden;
            display: flex;
            width: 100%;
            height: 100%;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: #e8f1f5;
        }

        h1{
            padding: 0;
            margin: 0;
            margin-bottom: 50px;
        }

        input{
            background-color: #d9e2e6;
            border-radius: 5px;
            border: none;
            width: 350px;
            padding: 10px;
        }

        div{
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }

        [name=change_password_form]{
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 200px;
            font-size: 19px;
            color: white;
            border: none;
            background-color: #ffde8c;
            border-radius: 50px;
            padding: 10px 30px;
            text-decoration: none;
            margin-top: 2em;
        }
    </style>
{% endblock %}
